<% cache [I18n.locale, current_pricing_options, @product] do %>
<div data-hook="product_show" itemscope itemtype="http://schema.org/Product">
<% @body_id = 'product-details' %>
  <section class="section-3">
    <div class="container">
      <div class="row">
        <div class="">
          <div class="row mrg-top-90">

            <div class="col-md-6">
              <div id="product-images" class="swiper-container gallery-screen no-pdd">
                <div class="swiper-wrapper">
                  <%= render partial: 'image' %>
                </div>
              </div>   
              <div class="swiper-container gallery-thumbs">
                <div class="swiper-wrapper">                 
                    <%= render partial: 'thumbnails' %>                  
                </div>
              </div>
                  <!-- <div data-hook="product_properties">
                    <%#= render partial: 'properties' %>
                  </div>

                  <div data-hook="promotions">
                    <%#= render partial: 'promotions' %>
                  </div> -->              
            </div>
                  
             
            <div class="col-md-6">                               
                  <h2 class="mrg-btm-30" itemprop="name"><%= @product.name %></h2>

                  <div itemprop="description" data-hook="description">
                    <p class="width-70 mrg-btm-30">
                      <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
                    </p>
                  </div>
                  <div id="cart-form" data-hook="cart_form">
                    <%= render partial: 'cart_form' %>
                  </div>
                <%#= render partial: 'taxons' %>                 
            </div>

            
          </div>
        </div>
      </div>

      <% if @obj %>
        <%= scrivito_tag :div, @obj, :body %>
      <% elsif scrivito_in_editable_view? %>
        <%= link_to "Provide product data", create_scrivito_obj_product_path(@product) ,method: 'POST'%>
      <% end %>
    </div>
  </section>
</div>
<% end %>
